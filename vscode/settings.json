{
  // ======================
  // Git Configuration
  // ======================
  "git.openRepositoryInParentFolders": "never",
  "git.ignoreRebaseWarning": true,
  "git.confirmSync": false,
  "git.autofetch": true,

  // ======================
  // Language-Specific Settings
  // ======================
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
    // "editor.suggest.showKeywords": true,
    // "editor.suggest.preview": true
  },
  "Prettier-SQL.keywordCase": "upper",

  "[python]": {
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  "[html]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.defaultFormatter": "vscode.html-language-features",
    // "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },

  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },

  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": true
  },

  "[scss]": {
    "editor.suggest.insertMode": "replace"
  },

  // ======================
  // Editor Configuration
  // ======================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // "editor.defaultFormatter": "biomejs.biome",
  "editor.tabSize": 2,
  "editor.stickyScroll.enabled": true,
  "editor.unicodeHighlight.allowedLocales": {
    "ru": true
  },
  "editor.parameterHints.enabled": true,
  "editor.renderWhitespace": "none",
  "editor.fontFamily": "Intel One Mono",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlayHints.fontSize": 1,
  "editor.inlayHints.maximumLength": 0,

  // ======================
  // Workbench & UI Customization
  // ======================
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "workbench.colorTheme": "Nostromo",
  "workbench.colorCustomizations": {
    "editorError.foreground": "#00000000",
    "editorWarning.foreground": "#00000000"
    // "editor.foreground": "#aabbcc",
    // "editor.background": "#000202de"
    // "editor.background": "#0e1615de"
    // "editor.lineHighlightBackground": "#9c2366de",
    // "editor.selectionBackground": "#0c1441de"
    // "editor.wordHighlightBackground": "#0d0c41de"
    // "editorCursor.foreground": "#0d0c41de"
  },
  "editor.minimap.enabled": false,

  // ======================
  // Terminal & Debug Console
  // ======================
  "terminal.integrated.fontFamily": "monospace",
  "debug.console.fontFamily": "Intel One Mono",

  // ======================
  // Source Control Management (SCM)
  // ======================
  "scm.inputFontFamily": "Intel One Mono",
  "diffEditor.ignoreTrimWhitespace": false,

  // ======================
  // Emmet Configuration
  // ======================
  "emmet.showSuggestionsAsSnippets": true,
  "files.associations": {
    "*html": "html",
    "*njk": "html"
  },
  "emmet.includeLanguages": {
    "typescript": "typescriptreact"
  },
  "emmet.preferences": {},

  // ======================
  // Error Lens Configuration
  // ======================
  "errorLens.borderRadius": "0.2em",
  // "errorLens.gutterIconsEnabled": true,
  // "errorLens.gutterIconSet": "emoji",
  // "errorLens.gutterEmoji": {
  //   "error": "üíÄ",
  //   "warning": "üòû",
  //   "info": "üÜó",
  //   "hint": "üçè"
  // },
  "errorLens.messageBackgroundMode": "message",

  // ======================
  // Live Server Configuration
  // ======================
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // ======================
  // TypeScript & JavaScript Configuration
  // ======================
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "js/ts.implicitProjectConfig.checkJs": true,

  // Inlay Hints for TypeScript and JavaScript
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,

  // ======================
  // Prettier Configuration
  // ======================
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,

  // ======================
  // Spell Checking
  // ======================
  "cSpell.language": "en,ru",

  // ======================
  // Miscellaneous
  // ======================
  "amVim.smartRelativeLineNumbers": true,
  "amVim.vimStyleNavigationInListView": false,
  "timeline.pageOnScroll": true,
  "explorer.confirmDragAndDrop": false,
  "html.completion.attributeDefaultValue": "doublequotes",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // ======================
  // Markdown Preview Enhanced
  // ======================
  "markdown-preview-enhanced.codeBlockTheme": "auto.css",
  "markdown-preview-enhanced.previewTheme": "one-dark.css",

  // ======================
  // CMake Configuration
  // ======================
  "cmake.options.advanced": {
    "build": {
      "statusBarVisibility": "inherit",
      "inheritDefault": "visible"
    },
    "launch": {
      "statusBarVisibility": "inherit",
      "inheritDefault": "visible"
    },
    "debug": {
      "statusBarVisibility": "inherit",
      "inheritDefault": "visible"
    }
  }
}
